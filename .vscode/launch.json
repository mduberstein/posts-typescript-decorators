    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "intro main.ts",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "tsc: build - typescript/intro/tsconfig.json",
            // "program": "${workspaceFolder}\\typescript\\out\\intro\\main.js",
            "program":"${workspaceFolder}\\typescript\\intro\\main.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
          "type": "pwa-node",
          "request": "launch",
          "name": "factories other-main.ts",
          "skipFiles": [
              "<node_internals>/**"
          ],
          "preLaunchTask": "tsc: build - typescript/factories/tsconfig.json",
          // "program": "${workspaceFolder}\\typescript\\factories\\out\\main.js",
          // "program":"${workspaceFolder}\\typescript\\factories\\main.ts",
          "program":"${workspaceFolder}\\typescript\\factories\\other-main.ts",
          "outFiles": [
              "${workspaceFolder}/**/*.js"
          ]
      }
    ]
}
